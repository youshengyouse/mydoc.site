#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/tom/www2026/8_server/vercel/fumadocs/packages/mdx/node_modules:/home/tom/www2026/8_server/vercel/fumadocs/packages/node_modules:/home/tom/www2026/8_server/vercel/fumadocs/node_modules:/home/tom/www2026/8_server/vercel/node_modules:/home/tom/www2026/8_server/node_modules:/home/tom/www2026/node_modules:/home/tom/node_modules:/home/node_modules:/node_modules:/home/tom/www2026/8_server/vercel/fumadocs/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/tom/www2026/8_server/vercel/fumadocs/packages/mdx/node_modules:/home/tom/www2026/8_server/vercel/fumadocs/packages/node_modules:/home/tom/www2026/8_server/vercel/fumadocs/node_modules:/home/tom/www2026/8_server/vercel/node_modules:/home/tom/www2026/8_server/node_modules:/home/tom/www2026/node_modules:/home/tom/node_modules:/home/node_modules:/node_modules:/home/tom/www2026/8_server/vercel/fumadocs/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../fumadocs-mdx/bin.js" "$@"
else
  exec node  "$basedir/../fumadocs-mdx/bin.js" "$@"
fi
